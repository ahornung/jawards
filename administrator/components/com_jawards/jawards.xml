<?xml version="1.0" encoding="iso-8859-1"?>
<mosinstall type="component" version="1.0.0">
  <name>jAwards</name>
  <author>Armin Hornung</author>
  <creationDate>March 2009</creationDate>
  <copyright>(C) 2009 Armin Hornung</copyright>
  <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
  <authorEmail>mail[at] arminhornung[dot] de</authorEmail>
  <authorUrl>http://www.arminhornung.de/Joomla/jAwards_en.html</authorUrl>
  <version>1.0 beta 1</version>
  <description>This component manages medals and lets you hand out awards to your users. For more information, Readme and Changelog see the project homepage at the Joomla-Forge!</description>
  <params />
  <files>
        <filename>jawards.class.php</filename>
        <filename>jawards.php</filename>
        <filename>jawards.html.php</filename>
        <filename>jawards.interface.php</filename>
        <filename>template.css</filename>
        <filename>index.html</filename>
  </files>
  
  <install>
	  <queries>
	  <query>
		  CREATE TABLE IF NOT EXISTS `#__jawards_medals` (
		  `id` int(11) NOT NULL auto_increment,
          `ordering` int(11) NOT NULL default '0',
		  `image` tinytext NOT NULL,
		  `name` tinytext NOT NULL,
		  `desc_text` text,
		  `default_reason` text,
		  PRIMARY KEY  (`id`)
		  ) TYPE=MyISAM AUTO_INCREMENT=1;
	  </query>
	  <query>
		  CREATE TABLE IF NOT EXISTS `#__jawards_awards` (
		  `id` int(11) NOT NULL auto_increment,
		  `userid` int(11) NOT NULL,
		  `award` int(11) NOT NULL,
		  `date` date NOT NULL default '2000-01-01',
		  `reason` text,
		  PRIMARY KEY  (`id`),
  		  INDEX idx_userid (`userid`),
  		  INDEX idx_award (`award`)
		  ) TYPE=MyISAM AUTO_INCREMENT=1;
	  </query>
  </queries>
  </install>
  <installfile>install.php</installfile>
  <administration>
	  <menu>jAwards</menu>
	  <submenu>
		  <menu task="showconfig">Configuration</menu>
		  <menu task="listmedals">Medals Management</menu>
		  <menu task="">Awards Management</menu>
	  </submenu>
	  <files>
		  <filename>admin.jawards.php</filename>
		  <filename>admin.jawards.html.php</filename>
		  <filename>config.jawards.php</filename>
		  <filename>toolbar.jawards.php</filename>
		  <filename>toolbar.jawards.html.php</filename>
		  <filename>index.html</filename>
		  <filename>language/english.php</filename>
		  <filename>language/german.php</filename>
          <filename>language/french.php</filename>
          <filename>language/dutch.php</filename>
          <filename>language/README.txt</filename>
          <filename>language/index.html</filename>
          <filename>images/index.html</filename>
          <filename>images/license.txt</filename>
          <filename>images/medal_gold.png</filename>
          <filename>images/medal_silver.png</filename>
	  </files>
	  
   </administration>
</mosinstall>
